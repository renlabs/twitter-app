<!DOCTYPE html>
<html>
<head>
  <title>TwitterApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	  <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <a class="brand" href="#"> Twitter</a>

          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><%= link_to "Home", root_path %></li>
              <li><%= link_to "Users", users_path %></li>
              <li><a href="#contact">Contact</a></li>
            </ul>

            <div class="pull-right">
              <ul class = "nav-collapse nav">
                <% if user_signed_in? %>
                  <!-- <li><a href="#"> Signed in as,  </a></li> -->
                  <li>
                    <div class="btn-group">
                      <%= link_to(@users) do%>
                        <a class="btn btn-info dropdown-toggle" href="#" data-toggle="dropdown">
                          <i class="icon-user"></i>
                          <%= "Signed in as, #{current_user.username}" %>
                          <b class="caret"></b>
                        </a>
                      <% end %>

                      <ul class="dropdown-menu">
                        <li><%= link_to "Profile","#" %></li>
                        <li><%= link_to "Tweets","#" %></li>
                        <li><%= link_to "Friends","#" %></li>
                        <li class="divider"></li>
                        <li> <%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
                      </ul>
                    </div>
                  </li>
                <% else %>
                  <li><%= link_to "Sign in", new_user_session_path %></li>
                <% end %>
              </ul>

            </div> <!--/. pULL RIGHT -->
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

	<div class="container">
    <div class="row">
      <% if notice %>
        <div class="span4 alert alert-success"><%= notice %></div>
        <% else if alert %>
         <div class="span4 alert alert-error"><%= alert %></div>
        <% end %>
      <% end %>
    </div>

       <%= yield %>
       <!-- <p class="notice"><%= notice %></p> -->
       <!-- <p class="alert"><%= alert %></p> -->
  </div>


</body>
</html>

