	<div class="row">
		<div class="span5 offset6">
			<div class="well">
				<h2>Sign up</h2><br />

				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				  <%= devise_error_messages! %>

				  <div><%= f.label :username %>
				  <%= f.text_field :username , :class => "span4", :placeholder => "Enter username"%></div>
				  
				  <div><br /><%= f.label :firstname %>
				  <%= f.text_field :firstname , :class => "span4", :placeholder => "Enter your firstname"%></div>

				  <div><br /><%= f.label :lastname %>
				  <%= f.text_field :lastname , :class => "span4", :placeholder => "Enter your lastname"%></div>

				  <div><br /><%= f.label :age %>
				  <%= f.text_field :age , :class => "span4", :placeholder => "Enter your age"%></div>

				  <div><br /><%= f.label :sex %>
				  <%= f.text_field :sex , :class => "span4", :placeholder => ""%></div>

				  <div><br /><%= f.label :email %>
				  <%= f.email_field :email , :class => "span4", :placeholder => "Enter e-mail address"%></div>

				  <div><br /><%= f.label :password %>
				  <%= f.password_field :password , :class => "span4", :placeholder => "Enter password" %></div>

				  <div><br /><%= f.label :password_confirmation %>
				  <%= f.password_field :password_confirmation, :class => "span4",:placeholder => "Confirm password"%></div>

				  <br>
				  <div ><%= f.submit 'Sign up' , :class => "btn btn-success btn-large"%></div>
				<% end %>
		   <%= render :partial => "devise/shared/links" %> 
			</div>
		</div>
	</div>