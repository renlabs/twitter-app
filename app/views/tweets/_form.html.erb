<%= form_for @tweet.build , :url => { :action => "create" }, :html => { :id => "new_tweet_form", :remote => true, :method => :post} do |tw| %>

		<%= tw.label :tweet %>
		<%= tw.text_field :tweet , :class => "span5", :id => "tweettext"%>
		<%= tw.submit "New tweet", :class => "btn-info", :id => "tweetbutton" %>

<% end %>