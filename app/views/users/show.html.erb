<h1>Profile</h1>


<div class="row" >
	<div class="hero-unit span5">
		<h1><%= @user.username %></h1><br>
		<%= form_for @user, :url => user_path(params[:id]) do |user| %>
			<p> 
				<%= user.label :username %>
				<%= user.text_field :username ,:class => "span3" %> 
			</p>

			<p> 
				<%= user.label :firstname %>
				<%= user.text_field :firstname ,:class => "span3" %> 
			</p>

			<p> 
				<%= user.label :lastname %>
				<%= user.text_field :lastname ,:class => "span3" %> 
			</p>

			<p> 
				<%= user.label :age %>
				<%= user.text_field :age ,:class => "span3" %> 
			</p>

			<p> 
				<%= user.label :sex %>
				<%= user.text_field :sex ,:class => "span3" %> 
			</p>

			<br><%= user.submit "Update" , :class => "btn btn-info" %>

		<% end %>
		<%= form_for @tweet, :url => user_tweets_path(@user.id), :remote => true do |tweet| %>
				<p>
					<%= tweet.label :tweet %>
					<%= tweet.text_field :tweet, :class => "span5" %>
					<%= tweet.submit "New tweet", :class => "btn-info" %>
				</p>
			<% end %>
			
		<div class="tweets">
			<%= render :partial => "user_tweets", :locals => {:tweets => @user.tweets } %>
		</div>

	</div>
</div>
